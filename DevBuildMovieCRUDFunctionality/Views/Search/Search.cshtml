@model Search


@using (Html.BeginForm("Search", "Search", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title)
    </div>
    <div>
        @Html.LabelFor(m => m.Genre)
        @Html.TextBoxFor(m => m.Genre)
    </div>
    <input type="submit" value="Search" />
}