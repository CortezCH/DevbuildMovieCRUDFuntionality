@model Movie

<div class="catalog-container">
    <h5>@Model.Title</h5>
    <h7>Genre:</h7>
    <p>@Model.Genre</p>

    <h7>Year:</h7>
    <p>@Model.Year</p>

    <h7>Run time:</h7>
    <p>@Model.RunTime</p>

    <p>
        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
    </p>
</div>
<br />
<p>Would you like to delete this movie?</p>

@using (Html.BeginForm("Delete", "Movie", FormMethod.Post, new { @class= "delete" }))
{
    <input type="submit" value="Yes" asp-route-id="@Model.ID"/>
}
@using (Html.BeginForm("Catalog", "Movie", FormMethod.Post, new { @class = "delete" }))
{
    <input type="submit" value="No" />
}